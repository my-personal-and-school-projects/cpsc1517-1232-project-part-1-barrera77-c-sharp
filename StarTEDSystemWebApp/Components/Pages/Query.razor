@page "/query"

<h3>Query</h3>









<div class="container border py-3">
    <section>
        <fieldset>
            <legend>Program Courses</legend>
            @* Display the programs *@            
          <div id="main-menu">
                @if (Programs == null)
                {
                    <div id="menu">
                        <div>
                            <p>Loading Programs. . .</p>
                        </div>
                    </div>

                    <div id="menu-buttons" class="">
                        <div>
                            <button class="btn btn-outline-primary">Show Program Courses</button>
                        </div>
                        <div>
                            <button class="btn btn-outline-primary">Add New ...</button>
                        </div>
                    </div>
                }
                else
                {
                    <div id="menu" class="col-8">
                        <div id="menu-program-courses" >
                            <label class="col-2" for="Program-info">Program:</label>
                            <select class="form-select" id="Program-info">
                                <option selected value="0">Select a program</option>
                                @if (Programs != null)
                                {
                                    foreach (var prog in Programs)
                                    {
                                        <option value="@prog.ProgramId">@prog.ProgramName</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div id="menu-buttons" class="col-4">
                        <div>
                            <button class="btn btn-outline-primary">Show Program Courses</button>
                        </div>
                        <div>
                            <button class="btn btn-outline-primary">Add New ...</button>
                        </div>
                    </div>

                }
                
          </div>
        </fieldset>
    </section>
    <section id="program-courses-display">
        <div id="table-wrapper">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Course Number</th>
                        <th>Course Name</th>
                        <th>Required</th>
                        <th>Section Limit</th>
                        <th>Credits</th>
                    </tr>
                </thead>
            </table>
        </div>
    </section>


</div>

